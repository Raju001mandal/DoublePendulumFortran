
set terminal wxt background 'black'

unset key
unset tics

unset border


set palette rgb 33,13,10
unset colorbox

set xrange[-8:8]
set yrange[-7:7]



set object 1 circle at 0, 0 fc rgb 'white' size 0.06 fs solid front

do for [ii=1:2001] {
     
     set multiplot layout 1,1
     
     set pm3d lighting primary 0.5 specular 0.2 
     plot 'dbpen.dat' using 3:4:5 every ::1::ii w l lt 1 lw 1.5 lc palette 
     plot 'dbpen.dat' using 3:4 every ::ii::ii w p pt 7 ps 4 lc rgb  "green"
     
    
     plot 'dbpen.dat' using 1:2 every ::1::ii w l lt 1 lw 0.5 lc rgb "white"
     plot 'dbpen.dat' using 1:2 every ::ii::ii w p pt 7 ps 3 lc rgb "white"
    
     
    
     unset multiplot
      
    
}
     
     
